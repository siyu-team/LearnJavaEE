<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>siyu</servlet-name>
        <servlet-class>Main</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>siyu</servlet-name>
        <url-pattern>/Siyu/Login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Image</servlet-name>
        <servlet-class>imgServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Image</servlet-name>
        <url-pattern>/Siyu/Image</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChatRoom</servlet-name>
        <servlet-class>ChatRoom</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ChatRoom</servlet-name>
        <url-pattern>/ChatRoom</url-pattern>
    </servlet-mapping>
</web-app>